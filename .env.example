# Configuración del entorno
# Copia este archivo como .env y completa los valores

# Clave secreta de Django (generar una nueva para producción)
SECRET_KEY=tu-clave-secreta-aqui

# Modo debug (True para desarrollo, False para producción)
DEBUG=True

# Hosts permitidos (separados por coma)
ALLOWED_HOSTS=127.0.0.1,localhost

# URL de la base de datos PostgreSQL
# Formato: postgres://usuario:contraseña@host:puerto/nombre_db
DATABASE_URL=postgres://usuario:contraseña@host:puerto/nombre_db
